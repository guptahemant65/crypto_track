layout{
 match : coininfo(CoinInfo)
  mode (Details)
  
  content {  section
    { content
      {image-card {
      aspect-ratio (4:3)
    image-url ("[#{value(CoinInfo.logo)}]")
     title-area {
        halign (Start)
        slot1 {
          text {
           value ("[#{value(CoinInfo.name)}] ([#{value(CoinInfo.selected_crypto_sign)}])")
            style (Title_L)
        
          }
        }      
            
      
          }  } 
      }
    } 
    section{title("Stats")
      content{
        partitioned{
          content{hbox{
              content{
                vbox{
                  content{
                    single-line{
                      text{
                        value("Price")
                        style(Detail_M)
                      }
                    }
                  }
                } vbox{
                  content{
                    single-line{
                      text{
                        value ("[#{value(CoinInfo.price)}]")
                        style(Detail_M)
                      }
                    }
                  }
                }
              }
            }
            hbox{
              content{
                vbox{
                  content{
                    single-line{
                      text{
                        value("Day High")
